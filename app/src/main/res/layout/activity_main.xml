<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <FrameLayout
      android:id="@+id/preview_display_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/no_camera_access_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="" />
  </FrameLayout>

  <LinearLayout
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginTop="5dp"
      android:layout_gravity="top|right"
      android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:onClick="changeCamera"
        android:text="切换" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="330dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center|bottom"
      android:layout_marginBottom="10dp"
      android:background="@drawable/round_tab"
      android:gravity="center">

    <TextView
        android:id="@+id/personTxt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:text="个人"
        android:textColor="@color/textcolor_selector" />

    <TextView
        android:id="@+id/contactTxt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:text="联系"
        android:textColor="@color/textcolor_selector" />

    <TextView
        android:id="@+id/captureTxt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:text="统计"
        android:textColor="@color/textcolor_selector" />

    <TextView
        android:id="@+id/healthTxt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:text="资讯"
        android:textColor="@color/textcolor_selector" />
    <!--        <TextView-->
    <!--            android:id="@+id/chatTxt"-->
    <!--            android:clickable="true"-->
    <!--            android:layout_weight="1"-->
    <!--            android:gravity="center"-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="match_parent"-->
    <!--            android:textColor="@color/textcolor_selector"-->
    <!--            android:text="问医" />-->
  </LinearLayout>
</FrameLayout>
